<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_new_kategorie"
       android:onClick="openNewCategoryScreen" />

    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_kategorie"  
       android:onClick="openCategoryScreen" />     
    
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_formular"
       android:onClick="openFormularScreen" />      
    
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_detail"
       android:onClick="openDetailScreen" />       
    
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_abzeichen"
       android:onClick="openAbzeichenScreen" />       
 
    <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/button_arten"
       android:onClick="openArtenScreen" />         
    
    
    <ListView android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
	  	android:id="@+id/mainListView">
	</ListView>
    
</LinearLayout>
