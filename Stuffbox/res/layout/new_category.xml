<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        style="@style/identifier"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="35dp"
        android:text="@string/name_category" />

    <EditText
        android:id="@+id/edit_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:hint="@string/edit_name" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        style="@style/identifier"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_category_name"
        android:layout_marginTop="22dp"
        android:text="@string/icon" />
    
        <Spinner
        android:id="@+id/spinner_new_category_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1" />

      <TextView
          android:id="@+id/testIconDB"
          style="@style/identifier"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/spinner_new_category_icon" />

</RelativeLayout>